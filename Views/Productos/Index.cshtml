@model IEnumerable<SistemaRequisiciones_WebApp.Models.Productos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surtido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Requisiciones.Area)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surtido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Requisiciones.Area)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Part }) |
            @Html.ActionLink("Details", "Details", new { id=item.Part }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Part })
        </td>
    </tr>
}

</table>
