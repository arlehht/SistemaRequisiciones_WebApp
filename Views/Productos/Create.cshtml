@model SistemaRequisiciones_WebApp.Models.Productos

@{
    ViewBag.Title = "Agregar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />
<br>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <div class="row">
            <div class="col">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Cantidad, "Cantidad: ")
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    @Html.LabelFor(model => model.Unidad, "Unidad: ")
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Unidad, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Unidad, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    @Html.LabelFor(model => model.Descripcion, "Descripción: ")
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    @Html.LabelFor(model => model.Surtido, "Surtido: ")
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Surtido, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Surtido, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    @Html.LabelFor(model => model.NoRequisicion, "No. de Requisicion: ")
                    <div class="col-md-10">
                        @*@Html.DropDownList("NoRequisicion", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NoRequisicion, "", new { @class = "text-danger" })*@
                        @Html.EditorFor(model => model.NoRequisicion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NoRequisicion, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col">
                
            </div>
        </div>
    </div>
    <p>
        <button type="submit" class="btn btn-primary" value="Create">Guardar</button>
        <a class="btn btn-dark" href="/Productos/Index" role="button">Regresar</a>
    </p>
 }